# Test Environment Configuration
# 테스트 환경 설정 파일

# =============================================================================
# 서버 설정
# =============================================================================
APP_SERVER_HOST=0.0.0.0
APP_SERVER_PORT=8081

# =============================================================================
# 데이터베이스 설정
# =============================================================================
POSTGRES_DB=pacs_test_db
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test123
POSTGRES_PORT=5433
APP_DATABASE_URL=postgres://test_user:test123@localhost:5433/pacs_test_db
APP_DATABASE_POOL_SIZE=5
APP_DATABASE_TIMEOUT=10

# =============================================================================
# Redis 설정
# =============================================================================
REDIS_PORT=6380
APP_REDIS_URL=redis://localhost:6380
APP_REDIS_POOL_SIZE=5

# =============================================================================
# JWT 설정
# =============================================================================
APP_JWT_SECRET=test-jwt-secret-key
APP_JWT_EXPIRATION=3600

# =============================================================================
# Keycloak 설정
# =============================================================================
APP_KEYCLOAK_URL=http://localhost:8080
APP_KEYCLOAK_REALM=dcm4che
APP_KEYCLOAK_CLIENT_ID=pacs-server
APP_KEYCLOAK_CLIENT_SECRET=your-client-secret
APP_KEYCLOAK_ADMIN_USERNAME=admin
APP_KEYCLOAK_ADMIN_PASSWORD=adminPassword123!

# =============================================================================
# CORS 설정
# =============================================================================
APP_CORS_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:8081,http://127.0.0.1:3001,http://127.0.0.1:8081
APP_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
APP_CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-User-ID,X-Requested-With,Accept,Origin
APP_CORS_EXPOSE_HEADERS=X-Total-Count,X-Page-Count,X-User-ID
APP_CORS_MAX_AGE=3600

# =============================================================================
# 객체 저장소 설정 (MinIO)
# =============================================================================
APP_OBJECT_STORAGE_PROVIDER=minio
APP_OBJECT_STORAGE_ENDPOINT=http://localhost:9002
APP_OBJECT_STORAGE_ACCESS_KEY=testadmin
APP_OBJECT_STORAGE_SECRET_KEY=testadmin123
APP_OBJECT_STORAGE_BUCKET=pacs-masks-test
APP_OBJECT_STORAGE_REGION=us-east-1

# =============================================================================
# 서명된 URL 설정
# =============================================================================
APP_SIGNED_URL_EXPIRATION=3600

# =============================================================================
# 로깅 설정
# =============================================================================
RUST_LOG=debug
RUST_BACKTRACE=1

# =============================================================================
# Nginx 설정
# =============================================================================
NGINX_PORT=8081
NGINX_SSL_PORT=8443

# =============================================================================
# MinIO 설정
# =============================================================================
MINIO_ROOT_USER=testadmin
MINIO_ROOT_PASSWORD=testadmin123
MINIO_PORT=9002
MINIO_CONSOLE_PORT=9003
